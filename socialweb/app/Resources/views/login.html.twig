{% extends 'main.html.twig' %}

{% block content %}

	<div class="d-flex justify-content-center align-items-center" id="container1">
		<div class="align-self-center" id="login-container">
			<div class="container ">
				<div class="row bottom-border">
					<div class="col font-comic log-reg-title-active" id="title-log">Logowanie</div>
					<div class="col font-comic pointer" id="title-reg">Rejestracja</div>
				</div>
				<div class="row row-margin" id="row-log1">
					<div class="col-12">
						<label for="log-email">Email</label>
						<div class="input-group">
							<span class="input-group-text">@</span>  
							<input type="text" class="form-control" id="log-email" placeholder="email">
						</div>
					</div>
				</div>
				<div class="row row-margin" id="row-log2">	
					<div class="col-12" id="col-log-pass">
						<label for="log-pass">Hasło</label>
						<div class="input-group">
							<span class="input-group-text">
								<i class="fa fa-unlock-alt"></i>
							</span>
							<input type="password" class="form-control" id="log-pass" placeholder="Hasło">
							<div class="invalid-feedback"></div>
						</div>
						
					</div>
				</div>
				<div class="row row-margin" id="row-log3">
					<div class="col-12">
						<div class="d-flex justify-content-center align-items-center">
						   <button class="btn btn-primary" type="submit" onclick="Login()">Loguj</button>
						</div>
					</div>
				</div>
				
				
				<div class="row row-margin" id="row-reg1">
					<div class="col-6" id="col-reg-name">
						<label for="reg-name">Imię</label>
						<div class="input-group">
							<span class="input-group-text">
								<i class="fa fa-user"></i>	
							</span> 
							<input type="text" class="form-control" id="reg-name" name="reg-name" placeholder="Imię"/>
