{% extends 'main.html.twig' %}

{% block content %} 
	<div class=" bg-dark text-white" id="container7">
		<div class="container-fluid">
			<div class="align-items-center row" id="row3">
				<div class="col-6 text-center">
					{% if user_profile.profile_img == '' %}
						<a><img src="{{ asset('service-image/user.png') }}" width="150px" class="img-fluid rounded-circle"></a>
					{%else %}
						<a><img src="{{ asset('images/'~user_profile.profile_img) }}" width="150px" height="150px" class="rounded-circle"></a>
					{% endif %}
					<h5>{{ user_profile.name }} {{ user_profile.surname }}</h5>
					<h6>
						{% if user_profile.city == '' %}
							-,
						{% else %}
							{{ user_profile.city }},
						{% endif %}
						{{ user_profile.age }}
						{% if user_profile.age == 1 %}
							rok 
						{% elseif user_profile.age % 100 >= 10 and  user_profile.age % 100 <= 19 %}
							lat
						{% else %}
							{% if user_profile.age % 10 in [0,1,5,6,7,8,9] %}
								lat
							{% endif %}
							{% if user_profile.age % 10 in [2,3,4] %}
								lata
							{% endif %}
						{% endif %}
					</h6>
				</div>
				<div class="col-6 text-center">
				<button class="btn btn-primary"><i class="fa fa-envelope"></i> Napisz wiadomość</button>
					{% if user_profile.friendship == 0 %}
						<button class="btn btn-primary" onclick="add_to_friends({{user_profile.id}})"><i class="fa fa-user-plus"></i> Wyślij zaproszenie</button>
					{% elseif user_profile.friendship == 1 %}
						<button title="Jesteście znajomymi" class="btn btn-primary disabled"><i class="fa fa-user-plus"></i> Wyślij zaproszenie</button>
					{% else %}
						<button title="Wysłano zaproszenie" class="btn btn-primary disabled"><i class="fa fa-user-plus"></i> Wyślij zaproszenie</button>

					{% endif %}
				</div>
			</div>
		</div>
	</div>
	
{% include 'profile_schema.html.twig' %}
{% endblock %}